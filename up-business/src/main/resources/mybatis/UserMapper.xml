<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hp.up.business.repository.UserRepository">
    <resultMap id="userMap" type="com.hp.up.core.Entity.User">
        <id property="id" column="id"/>
        <result property="name" column="namae"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="email" column="email"/>
        <result property="gender" column="gender"/>
        <result property="active" column="active"/>
        <result property="realName" column="userRealName"/>
        <result property="lastLoginTime" column="lastLoginTime"/>
        <result property="birthday" column="birthday"/>
        <result property="status" column="status"/>
        <result property="nickName" column="nickname"/>
        <result property="qq" column="qq"/>
        <result property="svatar" column="avatar"/>

    </resultMap>

    <select id="findUserByName" parameterType="String" resultMap="userMap">
        select id,name,password,salt,email,gender,active,lastLoginTime,birthday,status,nickname,userRealName,qq,avatar
        from tb_user where name = #{name}
    </select>

    <delete id="remove" parameterType="long">
        delete from tb_user
        <where>
            <if test="value != null">
                id = <![CDATA[#{value}]]>
            </if>
        </where>
    </delete>

    <update id="updateLastLoginTime" parameterType="Long">
        UPDATE tb_user
        SET lastLoginTime = NOW()
        WHERE
        id = <![CDATA[#{value}]]>

    </update>

</mapper>