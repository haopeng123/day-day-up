<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hp.up.business.repository.SystemResourceRepository">
    <resultMap id="systemResourceMap" type="com.hp.up.core.Entity.SystemResource">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="identity" column="identity"/>
        <result property="url" column="url"/>
        <result property="parentId" column="parent_id"/>
        <result property="parentIds" column="parent_ids"/>
        <result property="icon" column="icon"/>
        <result property="weight" column="weight"/>
        <result property="permissions" column="permissions"/>
        <result property="show" column="is_show"/>
        <result property="owner" column="owner"/>
    </resultMap>


    <select id="getAll" resultMap="systemResourceMap">
        SELECT
            t.id,
            t.name,
            t.identity,
            t.url,
            t.parent_id,
            t.parent_ids,
            t.icon,
            t.icon,
            t.weight,
            t.permissions,
            t.is_show,
            t.owner
        FROM tb_resource t
        WHERE
            t.is_show = 1
    </select>

    <select id="get" resultMap="systemResourceMap" parameterType="long">
        SELECT
            t.id,
            t.name,
            t.identity,
            t.url,
            t.parent_id,
            t.parent_ids,
            t.icon,
            t.icon,
            t.weight,
            t.permissions,
            t.is_show,
            t.owner
        FROM tb_resource t
        WHERE
            t.id = #{value}
    </select>

</mapper>